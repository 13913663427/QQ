<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35mm"
        android:layout_marginTop="96mm"
        android:drawableLeft="@mipmap/back_icon"
        android:drawablePadding="10mm"
        android:text="返回"
        android:textSize="54sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="96mm"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100mm"
            android:text="输入手机号码"
            android:textColor="#000"
            android:textSize="112sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50mm"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即代表阅读并同意"
                android:textSize="42sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用条款"
                android:textColor="#3DC0F8"
                android:textSize="42sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"
                android:textSize="42sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私政策"
                android:textColor="#3DC0F8"
                android:textSize="42sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="96mm"
            android:layout_marginTop="50mm"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:hint="请输入手机号"
                android:textSize="52sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2mm"
                android:layout_marginTop="60mm"
                android:background="#999"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/edit_code"
                    android:layout_width="800mm"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="number"
                    android:hint="请输入验证码"
                    android:textSize="52sp"/>

                <Button
                    android:id="@+id/btn_code"
                    android:layout_width="448mm"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textSize="60sp"/>
            </LinearLayout>

            <View
                android:layout_width="800mm"
                android:layout_height="2mm"
                android:layout_marginTop="5mm"
                android:background="#999"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70mm"
                android:text="下一步"
                android:textColor="#999"
                android:textSize="56mm"/>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>